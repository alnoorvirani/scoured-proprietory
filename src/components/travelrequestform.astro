<form class="travel-request-form" netlify>
  <section>
    <h1>Travel Request Form</h1>
    <label for="first-name">
      First Name:
      <input type="text" name="First Name" />
    </label>
    <label for="last-name">
      Last Name:
      <input type="text" name="Last Name" />
    </label>
    <label for="communication"> Preferred Communication Method:</label>
    <select id="communication" name="communication">
      <option value="email">Email</option>
      <option value="phone">Phone</option>
      <option value="text">Text Message</option>
      <option value="text">Mail (we're kidding)</option>
    </select>
    <label for="dietary"> Dietary Requirements:</label>
    <textarea id="dietary" name="dietary"></textarea>
    <!-- Add more fields here -->
    <button type="submit">Submit Request</button>
  </section>

  <style>
    /* Add your styles here */
    .travel-inquiry-form {
      max-width: 600px;
      margin: 0 auto;
      padding: 20px;
      background-color: #f9f9f9;
      border-radius: 8px;
    }

    .travel-inquiry-form label {
      display: block;
      margin-top: 15px;
    }

    .travel-inquiry-form input,
    .travel-inquiry-form textarea,
    .travel-inquiry-form select {
      width: 100%;
      padding: 8px;
      margin-top: 5px;
    }

    .travel-inquiry-form button {
      margin-top: 20px;
      padding: 10px 20px;
      background-color: var(--soft-green);
      color: white;
      border: none;
      border-radius: 4px;
      cursor: pointer;
    }
  </style>
</form>
