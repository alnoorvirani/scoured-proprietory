---
import { Icon } from "astro-icon/components";
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import Contactform from "@components/contactform.astro";
import Travelrequestform from "@components/travelrequestform.astro";
---

<Layout title="Contact">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Contact</Fragment>
      <Fragment slot="desc">
        Ready to start planning? We are here so you can focus on what matters.
      </Fragment>
    </Sectionhead>

    <div class="grid md:grid-cols-2 gap-10 mx-auto max-w-4xl mt-16">
      <div>
        <h2 class="font-medium text-2xl text-gray-800">
          Contact Compass & Style
        </h2>
        <p class="text-lg leading-relaxed text-slate-500 mt-3">
          Have questions about your trip planning? We are here to answer and
          comfort your concerns. Fill out the below form, send an email to
          hello@compassandstyle.com and we will respond to you with confirmation
          of receipt and once we've researched your concern.
        </p>
        <div class="mt-5">
          <div class="flex items-center mt-2 space-x-2 text-gray-600">
            <Icon class="text-gray-400 w-4 h-4" name="uil:map-marker" />
            <span>Ann Arbor, MI</span>
          </div><div class="flex items-center mt-2 space-x-2 text-gray-600">
            <Icon class="text-gray-400 w-4 h-4" name="uil:envelope" />
            <a href="mailto:hello@compassandstyle.com">
              hello@compassandstyle.com
            </a>
          </div><div class="flex items-center mt-2 space-x-2 text-gray-600">
            <Icon class="text-gray-400 w-4 h-4" name="uil:phone" />
            <a href="tel:+1 (872) 808-0070">(872) 808-0070</a>
          </div>
        </div>
      </div>

      <div class="bg-slate-100 p-5 md:p-8 rounded-xl mb-5">
        <Travelrequestform />
      </div>
    </div>
  </Container>
</Layout>
